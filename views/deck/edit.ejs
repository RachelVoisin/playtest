<%- include('../partials/header'); %>

<p><%= deck.name %></p>
<p><%= deck.format %></p>
<p><%= deck.dateUpdated %></p>
<div style="width:15px;height:15px;background-color:<%= deck.color %>;"></div>

<form action="/deck/<%= deck._id %>/add" method="POST">
    <input type="text" name="name" placeholder="Card Name">
    <input type="submit" value="Add Card">
    <!-- preform actions using ajax! -->


    <!--document.getElementById('foo').onkeypress = function(e){
    if (!e) e = window.event;
    var keyCode = e.keyCode || e.which;
    if (keyCode == '13'){
      // Enter pressed
      return false;
    }
  }-->
</form>

<select name="actions">
    <option value="remove">Delete</option>
    <option value="maybe">Move to Maybeboard</option>
    <option value="cut">Mark as Cuttable</option>
    <option value="buy">Mark as Not Owned</option>
</select>   
<button onclick="submitAction()">Go!</button> 

<table>
    <% deck.deckCards.forEach(function(card){ %>
        <tr>
            <td>
                <input type="checkbox" value="<%= card.id %>">
            </td>
            <td><input type="number" value="<%= card.number %>" id="<%= card.id %>"></td>
            <td><%= card.name %></td>
            <td>
                <% if (card.cut) { %>
                    <span>Cut</span>
                <% } %>
                <% if (card.buy) { %>
                    <span>Not Owned</span>
                <% } %>
            </td>
        </tr>
    <% }); %>
</table>

